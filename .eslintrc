{
  "env": {
    "node": true,
    "browser": true,
    "jquery": true,
    "es6": true
  },
  "globals": {
    "window": true,
    "jQuery": true,
    "$": false
  },
  "rules": {
    "camelcase": [
      2
    ],
    "curly": [
      2
    ],
    "brace-style": [
      2,
      "1tbs"
    ],
    "quotes": [
      2,
      "single",
      "avoid-escape"
    ],
    "semi": [
      2,
      "always"
    ],
    "no-unused-vars": [
      0,
      {
        "vars": "all",
        "args": "after-used"
      }
    ],
    "no-use-before-define": [
      0
    ],
    "no-shadow": [
      1,
      {
        "builtinGlobals": false,
        "hoist": "functions"
      }
    ],
    "space-infix-ops": [
      2
    ]
  }
}
